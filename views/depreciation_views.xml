        <odoo>
  <data>
    <!-- explicit list view definition -->
   
    <record model="ir.ui.view" id="hin_asset_depreciation_tree">
      <field name="name">hin.asset.depreciation.tree</field>
      <field name="model">hin.asset.depreciation</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="depreciation_is_active"/>  
        </tree>
      </field>
    </record>
   

    <!-- actions opening views on models -->

    <record model="ir.actions.act_window" id="hin_asset_depreciation_action_window">
      <field name="name">Hin Asset Depreciation</field>
      <field name="res_model">hin.asset.depreciation</field>
      <field name="view_mode">tree,form</field>
    </record>

  </data>
</odoo>