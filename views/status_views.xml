<odoo>
  <data>
    <!-- explicit list view definition -->
   
    <record model="ir.ui.view" id="hin_asset_status_tree">
      <field name="name">hin.asset.status.tree</field>
      <field name="model">hin.asset.status</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="status_is_available"/>  
        </tree>
      </field>
    </record>
   

    <!-- actions opening views on models -->

    <record model="ir.actions.act_window" id="hin_asset_status_action_window">
      <field name="name">Hin Asset Status</field>
      <field name="res_model">hin.asset.status</field>
      <field name="view_mode">tree,form</field>
    </record>

  </data>
</odoo>